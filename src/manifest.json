{
  "name": "Tags Into Notices",
  "author": {
    "name": "Aleksandr Bashurov",
    "email": "me@abash.space",
    "url": "https://github.com/abashurov/zd-tags-into-notices"
  },
  "defaultLocale": "en",
  "private": true,
  "location": {
    "support": {
      "user_sidebar": "assets/iframe.html",
      "ticket_sidebar": "assets/iframe.html",
      "organization_sidebar": "assets/iframe.html"
    }
  },
  "version": "1.0",
  "frameworkVersion": "2.0",
  "parameters": [
    {
      "name": "tags",
      "type": "multiline",
      "required": true,
      "default": "[ {\"name\":\"abuser\",\"style\":\"warn\",\"desc\":\"User abuses support\",\"link\":\"example.com\"} ]"
    },
    {
      "name": "styles",
      "type": "multiline",
      "required": true,
      "default": "[ {\"name\":\"warn\",\"style\":\"color:#FF0000;line-height:2.5rem;font-size:2rem;\"} ]"
    },
    {
      "name": "default",
      "type": "multiline",
      "required": "true",
      "default": "[ {\"desc\": \"No warnings here\",\"style\":\"line-height:2.5rem;font-size:2rem;color:#00FF00;\"} ]"
    }
  ]
}
